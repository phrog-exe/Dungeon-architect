<Window x:Class="DungeonArchitect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dungeon Architect - Procedural Generator" Height="600" Width="900" 
        Background="#1e1e1e">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Background="#2d2d2d" Margin="10">
            <TextBlock Text="DESIGNER" Foreground="DarkOliveGreen" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="Map Size: " Foreground="White" Margin="5"/>
                <TextBlock Text="{Binding ElementName=SizeSlider, Path=Value, StringFormat={}{0:0}}" 
                   Foreground="DarkOliveGreen" FontWeight="Bold" Margin="0,5"/>
            </StackPanel>
            <Slider x:Name="SizeSlider" Minimum="10" Maximum="50" Value="25" Margin="5" IsSnapToTickEnabled="True" TickFrequency="1"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                <TextBlock Text="Complexity: " Foreground="White" Margin="5"/>
                <TextBlock Text="{Binding ElementName=ComplexitySlider, Path=Value, StringFormat={}{0:0}}" 
                   Foreground="DarkOliveGreen" FontWeight="Bold" Margin="0,5"/>
            </StackPanel>
            <Slider x:Name="ComplexitySlider" Minimum="50" Maximum="1000" Value="200" Margin="5" IsSnapToTickEnabled="True" TickFrequency="10"/>

            <Button x:Name="GenerateBtn" Content="GENERATE DUNGEON" Height="40" Margin="5,30,5,5" 
            Background="DarkOliveGreen" FontWeight="Bold" Click="GenerateBtn_Click"/>
        </StackPanel>

        <Border Grid.Column="1" Margin="10" BorderBrush="#3f3f3f" BorderThickness="2" Background="Black">
            <ItemsControl x:Name="DungeonDisplay">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="{Binding ElementName=SizeSlider, Path=Value}" 
                                     Columns="{Binding ElementName=SizeSlider, Path=Value}"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Rectangle Width="Auto" Height="Auto" Margin="0.5" Fill="{Binding Color}"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Border>
    </Grid>
</Window>
